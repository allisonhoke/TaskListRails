<%= form_for @task do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :completed_at %>
  <%= f.date_field :completed_at %>

  <%= f.submit "Submit" %>
  <% end %>



<p>
  <%= button_to("Go back to the list", tasks_path, method: :get) %>
</p>
<p>
  <%= link_to("Delete this task", task_delete_path, method: :delete, data: {confirm: "Are you sure you want to delete this task?"}) %>
</p>
